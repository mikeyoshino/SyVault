@page "/"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@layout MainLayout
@inject NavigationManager Navigation

<PageTitle>หน้าแรก - HeritageVault</PageTitle>

<div class="max-w-7xl">
    <!-- Welcome Header -->
    <div class="mb-10">
        <h1 class="text-4xl font-semibold text-slate-800 mb-2">สวัสดี, คุณผู้ใช้งาน 👋</h1>
        <p class="text-slate-500">ยินดีต้อนรับสู่ระบบจัดการมรดกดิจิทัลของครอบครัวคุณ</p>
    </div>

    <!-- Category Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
        <!-- Land Deeds Card -->
        <div class="flat-card rounded-2xl p-6 cursor-pointer hover:shadow-lg transition-all" @onclick="@(() => Navigation.NavigateTo("/vault"))">
            <div class="w-12 h-12 rounded-xl bg-amber-50 flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-amber-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
            </div>
            <h3 class="text-lg font-semibold text-slate-800 mb-1">โฉนดและที่ดิน</h3>
            <p class="text-slate-500 text-sm mb-3">เอกสารสิทธิ์ในที่ดินและอสังหาริมทรัพย์</p>
            <div class="flex items-center text-amber-700 font-semibold text-sm">
                <span class="text-2xl mr-2">3</span>
                <span>รายการ</span>
            </div>
        </div>

        <!-- Insurance Policies Card -->
        <div class="flat-card rounded-2xl p-6 opacity-50 cursor-not-allowed">
            <div class="w-12 h-12 rounded-xl bg-slate-50 flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
            </div>
            <h3 class="text-lg font-semibold text-slate-400 mb-1">กรมธรรม์ประกันภัย</h3>
            <p class="text-slate-400 text-sm mb-3">ประกันชีวิต สุขภาพ และอื่นๆ</p>
            <div class="flex items-center text-slate-400 font-semibold text-sm">
                <span class="text-xs">เร็วๆ นี้</span>
            </div>
        </div>

        <!-- Accounts & Passwords Card -->
        <div class="flat-card rounded-2xl p-6 opacity-50 cursor-not-allowed">
            <div class="w-12 h-12 rounded-xl bg-slate-50 flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                </svg>
            </div>
            <h3 class="text-lg font-semibold text-slate-400 mb-1">บัญชีและรหัสผ่าน</h3>
            <p class="text-slate-400 text-sm mb-3">ข้อมูลการเข้าถึงบัญชีต่างๆ</p>
            <div class="flex items-center text-slate-400 font-semibold text-sm">
                <span class="text-xs">เร็วๆ นี้</span>
            </div>
        </div>

        <!-- Health Records Card -->
        <div class="flat-card rounded-2xl p-6 opacity-50 cursor-not-allowed">
            <div class="w-12 h-12 rounded-xl bg-slate-50 flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
            </div>
            <h3 class="text-lg font-semibold text-slate-400 mb-1">ประวัติสุขภาพ</h3>
            <p class="text-slate-400 text-sm mb-3">เวชระเบียนและข้อมูลสุขภาพ</p>
            <div class="flex items-center text-slate-400 font-semibold text-sm">
                <span class="text-xs">เร็วๆ นี้</span>
            </div>
        </div>
    </div>

    <!-- Recent Items Section -->
    <div class="flat-card rounded-2xl p-8">
        <div class="flex justify-between items-center mb-6">
            <div>
                <h2 class="text-2xl font-semibold text-slate-800 mb-1">รายการล่าสุด</h2>
                <p class="text-slate-500 text-sm">เอกสารที่เพิ่มหรือแก้ไขล่าสุด</p>
            </div>
            <button class="btn-amber text-white px-6 py-3 rounded-xl font-medium hover:shadow-lg transition-all">
                + เพิ่มข้อมูลใหม่
            </button>
        </div>

        <!-- Recent Items Table -->
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="border-b border-slate-100">
                        <th class="text-left py-4 px-4 text-slate-500 font-medium text-sm">ชื่อเอกสาร</th>
                        <th class="text-left py-4 px-4 text-slate-500 font-medium text-sm">หมวดหมู่</th>
                        <th class="text-left py-4 px-4 text-slate-500 font-medium text-sm">วันที่แก้ไข</th>
                        <th class="text-right py-4 px-4 text-slate-500 font-medium text-sm">การดำเนินการ</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="border-b border-slate-50 hover:bg-slate-50 transition-colors">
                        <td class="py-4 px-4">
                            <div class="flex items-center">
                                <div class="w-10 h-10 rounded-lg bg-amber-50 flex items-center justify-center mr-3">
                                    <svg class="w-5 h-5 text-amber-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <div class="font-medium text-slate-800">โฉนดที่ดินเลขที่ 123456</div>
                                    <div class="text-xs text-slate-500">จังหวัดเชียงใหม่</div>
                                </div>
                            </div>
                        </td>
                        <td class="py-4 px-4">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-amber-50 text-amber-700">
                                โฉนดและที่ดิน
                            </span>
                        </td>
                        <td class="py-4 px-4 text-slate-600 text-sm">2 วันที่แล้ว</td>
                        <td class="py-4 px-4 text-right">
                            <button class="text-slate-400 hover:text-amber-700 transition-colors">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                            </button>
                        </td>
                    </tr>
                    <tr class="border-b border-slate-50 hover:bg-slate-50 transition-colors">
                        <td class="py-4 px-4">
                            <div class="flex items-center">
                                <div class="w-10 h-10 rounded-lg bg-amber-50 flex items-center justify-center mr-3">
                                    <svg class="w-5 h-5 text-amber-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <div class="font-medium text-slate-800">สัญญาซื้อขายบ้าน</div>
                                    <div class="text-xs text-slate-500">กรุงเทพมหานคร</div>
                                </div>
                            </div>
                        </td>
                        <td class="py-4 px-4">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-amber-50 text-amber-700">
                                โฉนดและที่ดิน
                            </span>
                        </td>
                        <td class="py-4 px-4 text-slate-600 text-sm">5 วันที่แล้ว</td>
                        <td class="py-4 px-4 text-right">
                            <button class="text-slate-400 hover:text-amber-700 transition-colors">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                            </button>
                        </td>
                    </tr>
                    <tr class="hover:bg-slate-50 transition-colors">
                        <td class="py-4 px-4">
                            <div class="flex items-center">
                                <div class="w-10 h-10 rounded-lg bg-amber-50 flex items-center justify-center mr-3">
                                    <svg class="w-5 h-5 text-amber-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <div class="font-medium text-slate-800">โฉนดที่ดินเลขที่ 789012</div>
                                    <div class="text-xs text-slate-500">จังหวัดภูเก็ต</div>
                                </div>
                            </div>
                        </td>
                        <td class="py-4 px-4">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-amber-50 text-amber-700">
                                โฉนดและที่ดิน
                            </span>
                        </td>
                        <td class="py-4 px-4 text-slate-600 text-sm">1 สัปดาห์ที่แล้ว</td>
                        <td class="py-4 px-4 text-right">
                            <button class="text-slate-400 hover:text-amber-700 transition-colors">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
