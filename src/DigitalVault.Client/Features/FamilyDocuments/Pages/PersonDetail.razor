                            class="mt-2 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors">
                            บันทึก
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- Add New ID Button -->
        <button class="flex items-center gap-2 text-blue-600 font-medium hover:underline">
            <i class="fas fa-plus"></i>
            <span>เพิ่มเอกสารใหม่</span>
        </button>
    </div>

    <!-- Files Section -->
    <div class="mt-12">
        <h2 class="text-lg font-bold text-slate-800 mb-4">ไฟล์เอกสาร (@_documents.Count)</h2>

        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mb-6">
            @foreach (var doc in _documents)
            {
                <div class="group relative bg-white border border-slate-200 rounded-xl p-4 hover:shadow-md transition-all">
                    <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity">
                        <button @onclick="() => DeleteDocument(doc.Id)" class="p-1 text-slate-400 hover:text-red-600">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>
                    <div class="flex flex-col items-center cursor-pointer" @onclick="() => OpenDocument(doc.Id)">
                        <div class="w-12 h-12 rounded-lg bg-blue-50 flex items-center justify-center text-blue-600 mb-3">
                            <i class="fas fa-file-alt text-2xl"></i>
                        </div>
                        <!-- Decrypting name is complex here without fetching master key again, using Type or truncated ID for now -->
                        <p class="text-sm font-medium text-slate-700 truncate w-full text-center">@doc.DocumentType</p>
                        <p class="text-xs text-slate-400">@doc.UploadedAt.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
            }

            <div
                class="border-2 border-dashed border-slate-300 rounded-xl p-4 flex flex-col items-center justify-center text-center hover:border-blue-400 hover:bg-blue-50/50 transition-all cursor-pointer min-h-[140px]">
                <i class="fas fa-cloud-upload-alt text-2xl text-slate-400 mb-2"></i>
                <p class="text-sm text-slate-600">อัปโหลดไฟล์</p>
            </div>
        </div>
