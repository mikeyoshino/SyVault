@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="flex">
    <!-- Sidebar Navigation -->
    <aside class="sidebar w-64 hidden md:flex flex-col fixed h-full z-50">
        <div class="p-6 border-b border-slate-100 flex items-center space-x-3">
            <div class="w-8 h-8 rounded-lg bg-amber-700 flex items-center justify-center text-white">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                </svg>
            </div>
            <span class="text-xl font-semibold text-slate-800">HeritageVault</span>
        </div>

        <nav class="flex-1 p-4 space-y-1">
            <!-- หน้าแรก -->
            <NavLink href="/" class="nav-item" Match="NavLinkMatch.All">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                หน้าแรก
            </NavLink>

            <div class="px-4 pt-4 pb-2 text-[10px] font-bold text-slate-400 uppercase tracking-widest">หมวดหมู่ข้อมูล</div>

            <!-- โฉนดและที่ดิน -->
            <NavLink href="/vault" class="nav-item">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                โฉนดและที่ดิน
            </NavLink>

            <div class="nav-item opacity-50 cursor-not-allowed">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
                สมาชิกในครอบครัว
            </div>

            <div class="nav-item opacity-50 cursor-not-allowed">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                ข้อมูลการเงิน
            </div>
        </nav>

        <div class="p-4 border-t border-slate-100">
            <button @onclick="Logout" class="w-full flex items-center px-4 py-3 text-slate-500 hover:text-red-600 transition-all">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                </svg>
                ออกจากระบบ
            </button>
        </div>
    </aside>

    <!-- Main Content Area -->
    <main class="flex-1 md:ml-64 p-6 md:p-10">
        @Body

        <!-- Global Footer -->
        <footer class="mt-20 pt-10 border-t border-slate-100 text-center text-slate-400 text-xs">
            <div class="mb-4 flex justify-center items-center space-x-2">
                <svg class="w-4 h-4 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span>ระบบรักษาความลับข้อมูลระดับสูง HeritageVault Private Cloud</span>
            </div>
            © 2026 HeritageVault. สงวนลิขสิทธิ์ข้อมูลเป็นของครอบครัวคุณเท่านั้น
        </footer>
    </main>
</div>

@code {
    private void Logout()
    {
        // Navigate to BFF logout endpoint
        Navigation.NavigateTo("/Logout", forceLoad: true);
    }
}
