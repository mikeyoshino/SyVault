            </div>
            <div class="grid grid-cols-1 gap-4 max-w-md">
                @if (GetDocumentByType("BirthCertificate") is var birthCert && birthCert != null)
                {
                    <div class="border border-slate-200 rounded-xl p-4 bg-white relative group">
                        <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            <button @onclick="() => DeleteDocument(birthCert.Id)"
                                class="p-1 text-slate-400 hover:text-red-600">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                        <div class="flex flex-col items-center cursor-pointer" @onclick="() => OpenDocument(birthCert.Id)">
                            <div
                                class="w-12 h-12 rounded-lg bg-green-50 flex items-center justify-center text-green-600 mb-2">
                                <i class="fas fa-check-circle text-2xl"></i>
                            </div>
                            <p class="text-xs text-slate-500">สำเนาสูติบัตร</p>
                            <p class="text-xs text-slate-400">@birthCert.UploadedAt.ToString("dd/MM/yyyy")</p>
