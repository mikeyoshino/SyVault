{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üöÄ API Server",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api",
            "program": "${workspaceFolder}/src/DigitalVault.API/bin/Debug/net8.0/DigitalVault.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/DigitalVault.API",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5135"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "üåê Gateway Server (Web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-gateway",
            "program": "${workspaceFolder}/src/DigitalVault.Gateway/bin/Debug/net8.0/DigitalVault.Gateway.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/DigitalVault.Gateway",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5000"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "üé® Client (Blazor WebAssembly)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-client",
            "program": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/src/DigitalVault.Client/DigitalVault.Client.csproj"
            ],
            "cwd": "${workspaceFolder}/src/DigitalVault.Client",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "üé® Client (Debug)",
            "type": "blazorwasm",
            "request": "launch",
            "preLaunchTask": "build-client",
            "cwd": "${workspaceFolder}/src/DigitalVault.Client",
            "browser": "chrome",
            "url": "http://localhost:5000/auth",
            "timeout": 120000,
            "webRoot": "${workspaceFolder}/src/DigitalVault.Client",
            "inspectUri": "{wsProtocol}://{url.hostname}:{url.port}/_framework/debug/ws-proxy?browser={browserInspectUri}",
            "trace": true
        },
        {
            "name": "üîó Attach to Client",
            "type": "blazorwasm",
            "request": "attach",
            "cwd": "${workspaceFolder}/src/DigitalVault.Client"
        }
    ],
    "compounds": [
        {
            "name": "‚ö° Full Stack (Gateway + API + Client)",
            "configurations": [
                "üöÄ API Server",
                "üåê Gateway Server (Web)",
                "üé® Client (Blazor WebAssembly)"
            ],
            "stopAll": true,
            "preLaunchTask": "build-all",
            "presentation": {
                "hidden": false,
                "group": "fullstack",
                "order": 1
            },
            "postDebugTask": "kill-all-servers"
        },
        {
            "name": "üîß Legacy (API + Client Direct)",
            "configurations": [
                "üöÄ API Server",
                "üé® Client (Blazor WebAssembly)"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "legacy",
                "order": 2
            }
        }
    ]
}