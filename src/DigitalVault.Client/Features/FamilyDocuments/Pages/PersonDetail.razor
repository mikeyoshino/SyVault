@page "/familyid/person/{PersonId}"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@using DigitalVault.Client.Shared.Layouts
@using DigitalVault.Client.Services
@using MudBlazor
@layout DashboardLayout
@inject NavigationManager Navigation
@inject DocumentService DocumentService
@inject ISnackbar Snackbar

<PageTitle>สมชาย ใจดี - เอกสารครอบครัว</PageTitle>

<div class="space-y-6 page-transition">
    <!-- Breadcrumb -->
    <nav class="flex items-center gap-2 text-sm text-slate-500">
        <a href="/familyid" class="hover:text-blue-600">เอกสารครอบครัว</a>
        <i class="fas fa-chevron-right text-xs"></i>
        <span class="text-slate-800 font-medium">สมชาย ใจดี</span>
    </nav>

    <!-- Header -->
    <div class="flex items-center gap-4">
        <div class="w-16 h-16 bg-amber-500 rounded-full flex items-center justify-center text-white font-bold text-2xl">
            สช
        </div>
        <div>
            <h1 class="text-3xl font-bold text-slate-800">สมชาย ใจดี</h1>
            <p class="text-slate-500">สมาชิกในครอบครัว</p>
        </div>
    </div>

    <!-- Tabs -->
    <div class="border-b border-slate-200">
        <div class="flex gap-6">
            <button class="pb-3 border-b-2 border-blue-600 text-blue-600 font-medium">ภาพรวม</button>
            <button class="pb-3 border-b-2 border-transparent text-slate-500 hover:text-slate-700">ไฟล์</button>
            <button class="pb-3 border-b-2 border-transparent text-slate-500 hover:text-slate-700">บันทึก</button>
        </div>
    </div>

    <!-- Document Sections -->
    <div class="space-y-8">
        <!-- บัตรประชาชน (ID Card) -->
        <div>
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-bold text-slate-800">บัตรประชาชน</h2>
                <button class="text-sm text-blue-600 font-medium hover:underline">+ ข้อมูลเพิ่มเติม</button>
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div
                    class="border-2 border-dashed border-slate-300 rounded-xl p-8 text-center hover:border-blue-400 hover:bg-blue-50/50 transition-all cursor-pointer">
                    <i class="fas fa-cloud-upload-alt text-3xl text-slate-400 mb-3 block"></i>
                    <p class="text-sm text-slate-600 mb-1">ลากไฟล์มาวางที่นี่ หรือ</p>
                    <p class="text-xs text-slate-500 mb-2">ด้านหน้าบัตร</p>
                    <InputFile OnChange="@(e => UploadFile(e, "IdCard_Front"))" class="hidden" id="file-idcard-front" />
                    <label for="file-idcard-front"
                        class="text-sm text-blue-600 font-medium hover:underline cursor-pointer">เลือกไฟล์</label>
                </div>
                <div
                    class="border-2 border-dashed border-slate-300 rounded-xl p-8 text-center hover:border-blue-400 hover:bg-blue-50/50 transition-all cursor-pointer">
                    <i class="fas fa-cloud-upload-alt text-3xl text-slate-400 mb-3 block"></i>
                    <p class="text-sm text-slate-600 mb-1">ลากไฟล์มาวางที่นี่ หรือ</p>
                    <p class="text-xs text-slate-500 mb-2">ด้านหลังบัตร</p>
                    <button class="text-sm text-blue-600 font-medium hover:underline">เลือกไฟล์</button>
                </div>
            </div>
            <div class="mt-3">
                <button @onclick="ToggleIdCardInfo"
                    class="text-sm text-blue-600 hover:underline flex items-center gap-1">
                    <i class="fas @(_showIdCardInfo ? "fa-chevron-down" : "fa-chevron-right") text-xs"></i>
                    <span>ข้อมูลบัตร</span>
                </button>
                @if (_showIdCardInfo)
                {
                    <div class="mt-4 bg-slate-50 rounded-xl p-4 space-y-3 animate-fadeIn">
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">เลขประจำตัวประชาชน (13
                                หลัก)</label>
                            <input type="text" placeholder="กรอกเลขบัตรประชาชน" maxlength="13"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">วันออกบัตร</label>
                            <input type="date"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">วันหมดอายุ</label>
                            <input type="date"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <button
                            class="mt-2 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors">
                            บันทึก
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- ใบขับขี่ (Driver License) -->
        <div>
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-bold text-slate-800">ใบขับขี่</h2>
                <button class="text-sm text-blue-600 font-medium hover:underline">+ ข้อมูลเพิ่มเติม</button>
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div
                    class="border-2 border-dashed border-slate-300 rounded-xl p-8 text-center hover:border-blue-400 hover:bg-blue-50/50 transition-all cursor-pointer">
                    <i class="fas fa-cloud-upload-alt text-3xl text-slate-400 mb-3 block"></i>
                    <p class="text-sm text-slate-600 mb-1">ลากไฟล์มาวางที่นี่ หรือ</p>
                    <p class="text-xs text-slate-500 mb-2">ด้านหน้าบัตร</p>
                    <button class="text-sm text-blue-600 font-medium hover:underline">เลือกไฟล์</button>
                </div>
                <div
                    class="border-2 border-dashed border-slate-300 rounded-xl p-8 text-center hover:border-blue-400 hover:bg-blue-50/50 transition-all cursor-pointer">
                    <i class="fas fa-cloud-upload-alt text-3xl text-slate-400 mb-3 block"></i>
                    <p class="text-sm text-slate-600 mb-1">ลากไฟล์มาวางที่นี่ หรือ</p>
                    <p class="text-xs text-slate-500 mb-2">ด้านหลังบัตร</p>
                    <button class="text-sm text-blue-600 font-medium hover:underline">เลือกไฟล์</button>
                </div>
            </div>
            <div class="mt-3">
                <button @onclick="ToggleDriverLicenseInfo"
                    class="text-sm text-blue-600 hover:underline flex items-center gap-1">
                    <i class="fas @(_showDriverLicenseInfo ? "fa-chevron-down" : "fa-chevron-right") text-xs"></i>
                    <span>ข้อมูลบัตร</span>
                </button>
                @if (_showDriverLicenseInfo)
                {
                    <div class="mt-4 bg-slate-50 rounded-xl p-4 space-y-3 animate-fadeIn">
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">เลขที่ใบขับขี่</label>
                            <input type="text" placeholder="กรอกเลขที่ใบขับขี่"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">ประเภทใบขับขี่</label>
                            <select
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                                <option>เลือกประเภท</option>
                                <option>รถจักรยานยนต์ (ชั่วคราว)</option>
                                <option>รถจักรยานยนต์</option>
                                <option>รถยนต์ส่วนบุคคล (ชั่วคราว)</option>
                                <option>รถยนต์ส่วนบุคคล</option>
                                <option>รถยนต์สาธารณะ</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">วันออกบัตร</label>
                            <input type="date"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">วันหมดอายุ</label>
                            <input type="date"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <button
                            class="mt-2 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors">
                            บันทึก
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- พาสปอร์ต (Passport) -->
        <div>
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-bold text-slate-800">หนังสือเดินทาง (พาสปอร์ต)</h2>
                <button class="text-sm text-blue-600 font-medium hover:underline">+ ข้อมูลเพิ่มเติม</button>
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div
                    class="border-2 border-dashed border-slate-300 rounded-xl p-8 text-center hover:border-blue-400 hover:bg-blue-50/50 transition-all cursor-pointer">
                    <i class="fas fa-cloud-upload-alt text-3xl text-slate-400 mb-3 block"></i>
                    <p class="text-sm text-slate-600 mb-1">ลากไฟล์มาวางที่นี่ หรือ</p>
                    <p class="text-xs text-slate-500 mb-2">หน้าข้อมูลส่วนตัว</p>
                    <button class="text-sm text-blue-600 font-medium hover:underline">เลือกไฟล์</button>
                </div>
                <div
                    class="border-2 border-dashed border-slate-300 rounded-xl p-8 text-center hover:border-blue-400 hover:bg-blue-50/50 transition-all cursor-pointer">
                    <i class="fas fa-cloud-upload-alt text-3xl text-slate-400 mb-3 block"></i>
                    <p class="text-sm text-slate-600 mb-1">ลากไฟล์มาวางที่นี่ หรือ</p>
                    <p class="text-xs text-slate-500 mb-2">หน้าวีซ่า (ถ้ามี)</p>
                    <button class="text-sm text-blue-600 font-medium hover:underline">เลือกไฟล์</button>
                </div>
            </div>
            <div class="mt-3">
                <button @onclick="TogglePassportInfo"
                    class="text-sm text-blue-600 hover:underline flex items-center gap-1">
                    <i class="fas @(_showPassportInfo ? "fa-chevron-down" : "fa-chevron-right") text-xs"></i>
                    <span>ข้อมูลหนังสือเดินทาง</span>
                </button>
                @if (_showPassportInfo)
                {
                    <div class="mt-4 bg-slate-50 rounded-xl p-4 space-y-3 animate-fadeIn">
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">เลขที่หนังสือเดินทาง</label>
                            <input type="text" placeholder="กรอกเลขพาสปอร์ต"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">ประเทศที่ออก</label>
                            <input type="text" value="ประเทศไทย"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">วันออกเล่ม</label>
                            <input type="date"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">วันหมดอายุ</label>
                            <input type="date"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <button
                            class="mt-2 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors">
                            บันทึก
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- ทะเบียนบ้าน (House Registration) -->
        <div>
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-bold text-slate-800">ทะเบียนบ้าน</h2>
                <button class="text-sm text-blue-600 font-medium hover:underline">+ ข้อมูลเพิ่มเติม</button>
            </div>
            <div class="grid grid-cols-1 gap-4 max-w-md">
                <div
                    class="border-2 border-dashed border-slate-300 rounded-xl p-8 text-center hover:border-blue-400 hover:bg-blue-50/50 transition-all cursor-pointer">
                    <i class="fas fa-cloud-upload-alt text-3xl text-slate-400 mb-3 block"></i>
                    <p class="text-sm text-slate-600 mb-1">ลากไฟล์มาวางที่นี่ หรือ</p>
                    <p class="text-xs text-slate-500 mb-2">สำเนาทะเบียนบ้าน</p>
                    <button class="text-sm text-blue-600 font-medium hover:underline">เลือกไฟล์</button>
                </div>
            </div>
            <div class="mt-3">
                <button @onclick="ToggleHouseRegInfo"
                    class="text-sm text-blue-600 hover:underline flex items-center gap-1">
                    <i class="fas @(_showHouseRegInfo ? "fa-chevron-down" : "fa-chevron-right") text-xs"></i>
                    <span>ข้อมูลทะเบียนบ้าน</span>
                </button>
                @if (_showHouseRegInfo)
                {
                    <div class="mt-4 bg-slate-50 rounded-xl p-4 space-y-3 animate-fadeIn">
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">เลขที่บ้าน</label>
                            <input type="text" placeholder="กรอกเลขที่บ้าน"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">หมู่ที่</label>
                            <input type="text" placeholder="กรอกหมู่ที่"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">ตำบล/แขวง</label>
                            <input type="text" placeholder="กรอกตำบล/แขวง"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">อำเภอ/เขต</label>
                            <input type="text" placeholder="กรอกอำเภอ/เขต"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">จังหวัด</label>
                            <input type="text" placeholder="กรอกจังหวัด"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <button
                            class="mt-2 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors">
                            บันทึก
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- สูติบัตร (Birth Certificate) -->
        <div>
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-bold text-slate-800">สูติบัตร</h2>
                <button class="text-sm text-blue-600 font-medium hover:underline">+ ข้อมูลเพิ่มเติม</button>
            </div>
            <div class="grid grid-cols-1 gap-4 max-w-md">
                <div
                    class="border-2 border-dashed border-slate-300 rounded-xl p-8 text-center hover:border-blue-400 hover:bg-blue-50/50 transition-all cursor-pointer">
                    <i class="fas fa-cloud-upload-alt text-3xl text-slate-400 mb-3 block"></i>
                    <p class="text-sm text-slate-600 mb-1">ลากไฟล์มาวางที่นี่ หรือ</p>
                    <p class="text-xs text-slate-500 mb-2">สำเนาสูติบัตร</p>
                    <button class="text-sm text-blue-600 font-medium hover:underline">เลือกไฟล์</button>
                </div>
            </div>
            <div class="mt-3">
                <button @onclick="ToggleBirthCertInfo"
                    class="text-sm text-blue-600 hover:underline flex items-center gap-1">
                    <i class="fas @(_showBirthCertInfo ? "fa-chevron-down" : "fa-chevron-right") text-xs"></i>
                    <span>ข้อมูลสูติบัตร</span>
                </button>
                @if (_showBirthCertInfo)
                {
                    <div class="mt-4 bg-slate-50 rounded-xl p-4 space-y-3 animate-fadeIn">
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">เลขที่สูติบัตร</label>
                            <input type="text" placeholder="กรอกเลขที่สูติบัตร"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">วัน/เดือน/ปีเกิด</label>
                            <input type="date"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">สถานที่เกิด</label>
                            <input type="text" placeholder="กรอกสถานที่เกิด"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <button
                            class="mt-2 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors">
                            บันทึก
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- Add New ID Button -->
        <button class="flex items-center gap-2 text-blue-600 font-medium hover:underline">
            <i class="fas fa-plus"></i>
            <span>เพิ่มเอกสารใหม่</span>
        </button>
    </div>

    <!-- Files Section -->
    <div class="mt-12">
        <h2 class="text-lg font-bold text-slate-800 mb-4">ไฟล์เอกสาร</h2>
        <div
            class="border-2 border-dashed border-slate-300 rounded-2xl p-12 text-center hover:border-blue-400 hover:bg-blue-50/50 transition-all cursor-pointer">
            <i class="fas fa-cloud-upload-alt text-4xl text-slate-400 mb-4"></i>
            <p class="text-slate-600">ลากไฟล์มาวางที่นี่ หรือ <span class="text-blue-600 font-medium">เลือกไฟล์</span>
            </p>
        </div>
        <button class="mt-4 text-sm text-blue-600 font-medium hover:underline">+ สร้างโฟลเดอร์ใหม่</button>
    </div>

    <!-- Notes Section -->
    <div class="mt-12">
        <h2 class="text-lg font-bold text-slate-800 mb-4">บันทึกช่วยจำ</h2>
        <textarea placeholder="เขียนบันทึกช่วยจำ..."
            class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:border-blue-600 resize-none"
            rows="4"></textarea>
        <button
            class="mt-2 px-6 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700">เพิ่มบันทึก</button>
    </div>
</div>

@code {
    [Parameter]
    public string? PersonId { get; set; }

    private bool _showIdCardInfo = false;
    private bool _showDriverLicenseInfo = false;
    private bool _showPassportInfo = false;
    private bool _showHouseRegInfo = false;
    private bool _showBirthCertInfo = false;

    private void ToggleIdCardInfo() => _showIdCardInfo = !_showIdCardInfo;
    private void ToggleDriverLicenseInfo() => _showDriverLicenseInfo = !_showDriverLicenseInfo;
    private void TogglePassportInfo() => _showPassportInfo = !_showPassportInfo;
    private void ToggleHouseRegInfo() => _showHouseRegInfo = !_showHouseRegInfo;
    private void ToggleBirthCertInfo() => _showBirthCertInfo = !_showBirthCertInfo;

    private async Task UploadFile(InputFileChangeEventArgs e, string documentType)
    {
        try
        {
            if (PersonId == null) return;

            var success = await DocumentService.UploadDocumentAsync(e.File, Guid.Parse(PersonId), documentType);
            if (success)
            {
                Snackbar.Add("อัปโหลดเอกสารสำเร็จ", Severity.Success);
            }
            else
            {
                Snackbar.Add("อัปโหลดไม่สำเร็จ", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Upload error: {ex.Message}");
            Snackbar.Add($"เกิดข้อผิดพลาด: {ex.Message}", Severity.Error);
        }
    }
}