@page "/beneficiaries"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@using DigitalVault.Client.Shared.Layouts
@layout DashboardLayout
@using System.ComponentModel.DataAnnotations

<PageTitle>HeritageVault - รายชื่อผู้สืบทอด</PageTitle>

<div class="view-content active">
    <nav class="flex items-center text-sm text-slate-500 mb-8 space-x-2">
        <a href="/" class="hover:text-amber-700 cursor-pointer font-medium transition-colors">หน้าแรก</a>
        <span>/</span>
        <span class="text-slate-800 font-bold">รายชื่อผู้สืบทอด</span>
    </nav>

    <header class="flex flex-col md:flex-row md:items-center justify-between mb-10 gap-4">
        <h2 class="text-3xl font-bold text-slate-800 tracking-tight">รายชื่อผู้รับช่วงต่อข้อมูล</h2>
        <button @onclick="OpenModal"
            class="btn-amber px-6 py-3 rounded-xl text-white text-sm font-semibold active:scale-95 transition-all shadow-md hover:shadow-lg">
            เพิ่มรายชื่อใหม่
        </button>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- ผู้สืบทอดแบบยืนยันตัวตน (Pulse Check) -->
        <div class="flat-card p-8 rounded-[2rem] bg-white border-emerald-100 shadow-sm hover:shadow-md transition-all">
            <div class="flex items-center justify-between mb-6">
                <div class="flex items-center">
                    <div
                        class="w-14 h-14 rounded-full bg-emerald-50 flex items-center justify-center text-emerald-700 font-bold text-xl mr-5">
                        สญ</div>
                    <div>
                        <h4 class="font-bold text-slate-800 text-lg">สมหญิง ใจดี</h4>
                        <p class="text-xs text-slate-500 font-medium">ภรรยา / คู่สมรส</p>
                    </div>
                </div>
                <span
                    class="status-badge bg-emerald-100 text-emerald-700 px-3 py-1 rounded-lg text-[10px] font-bold uppercase tracking-wider">แบบยืนยันตัวตน</span>
            </div>

            <div class="space-y-3 text-sm text-slate-600 mb-6">
                <div class="flex items-center"><svg class="w-4 h-4 mr-3 text-slate-300" fill="none"
                        stroke="currentColor" viewBox="0 0 24 24">
                        <path
                            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z">
                        </path>
                    </svg> somying@mail.com</div>
                <div class="flex items-center"><svg class="w-4 h-4 mr-3 text-slate-300" fill="none"
                        stroke="currentColor" viewBox="0 0 24 24">
                        <path
                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z">
                        </path>
                    </svg> 081-234-5678</div>
            </div>

            <div class="p-3 bg-emerald-50 rounded-xl flex items-center justify-between">
                <div class="flex items-center">
                    <div class="w-2 h-2 bg-emerald-500 rounded-full mr-2 animate-pulse"></div>
                    <span class="text-[10px] font-bold text-emerald-800 uppercase">Pulse Status: เป็นปกติ</span>
                </div>
                <span class="text-[9px] text-emerald-600 font-medium italic">ตรวจเช็กถัดไปใน 174 วัน</span>
            </div>

            <div class="flex justify-end border-t border-slate-50 mt-6 pt-4">
                <button class="text-xs font-bold text-slate-400 hover:text-red-500 transition-colors">ลบรายชื่อ</button>
            </div>
        </div>

        <!-- ผู้สืบทอดแบบบันทึกรายชื่อ (Silent) -->
        <div class="flat-card p-8 rounded-[2rem] bg-white shadow-sm hover:shadow-md transition-all">
            <div class="flex items-center justify-between mb-6">
                <div class="flex items-center">
                    <div
                        class="w-14 h-14 rounded-full bg-slate-50 flex items-center justify-center text-slate-400 font-bold text-xl mr-5">
                        สพ</div>
                    <div>
                        <h4 class="font-bold text-slate-800 text-lg">สมพงษ์ ใจดี</h4>
                        <p class="text-xs text-slate-500 font-medium">บุตรชาย</p>
                    </div>
                </div>
                <span
                    class="status-badge bg-slate-100 text-slate-500 px-3 py-1 rounded-lg text-[10px] font-bold uppercase tracking-wider">แบบบันทึกรายชื่อ</span>
            </div>

            <div class="space-y-3 text-sm text-slate-600">
                <div class="flex items-center"><svg class="w-4 h-4 mr-3 text-slate-300" fill="none"
                        stroke="currentColor" viewBox="0 0 24 24">
                        <path
                            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z">
                        </path>
                    </svg> sompong@mail.com</div>
                <div class="flex items-center"><svg class="w-4 h-4 mr-3 text-slate-300" fill="none"
                        stroke="currentColor" viewBox="0 0 24 24">
                        <path
                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z">
                        </path>
                    </svg> 089-999-8888</div>
            </div>

            <div class="mt-6 p-3 border border-slate-100 rounded-xl bg-slate-50 text-[10px] text-slate-400 italic">
                * โหมดบันทึกรายชื่ออย่างเดียว: จะไม่มีการส่งข้อความตรวจสอบสถานะหาผู้รับ
            </div>

            <div class="flex justify-end border-t border-slate-50 mt-6 pt-4">
                <button class="text-xs font-bold text-slate-400 hover:text-red-500 transition-colors">ลบรายชื่อ</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
@if (showModal)
{
    <div class="fixed inset-0 bg-slate-900/40 backdrop-blur-sm z-50 flex items-center justify-center p-4 fade-in">
        <div
            class="bg-white w-full max-w-lg rounded-3xl border border-slate-200 p-8 overflow-y-auto max-h-[90vh] shadow-2xl scale-in">
            <div class="flex justify-between items-center mb-8">
                <h3 class="text-xl font-bold text-slate-800">ระบุผู้รับข้อมูลมรดก</h3>
                <button @onclick="CloseModal" class="text-slate-400 hover:text-slate-600 transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                        </path>
                    </svg>
                </button>
            </div>

            <EditForm Model="newBeneficiary" OnValidSubmit="HandleSave">
                <DataAnnotationsValidator />

                <div class="space-y-5">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">ชื่อจริง</label>
                            <InputText @bind-Value="newBeneficiary.FirstName" placeholder="ระบุชื่อ"
                                class="w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:border-amber-700 transition-colors" />
                            <ValidationMessage For="@(() => newBeneficiary.FirstName)" class="text-red-500 text-xs mt-1" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">นามสกุล</label>
                            <InputText @bind-Value="newBeneficiary.LastName" placeholder="ระบุนามสกุล"
                                class="w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:border-amber-700 transition-colors" />
                            <ValidationMessage For="@(() => newBeneficiary.LastName)" class="text-red-500 text-xs mt-1" />
                        </div>
                    </div>

                    <div class="grid grid-cols-1 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">ความสัมพันธ์</label>
                            <InputText @bind-Value="newBeneficiary.Relationship" placeholder="เช่น ภรรยา, บุตร"
                                class="w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:border-amber-700 transition-colors" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">อีเมลติดต่อ</label>
                            <InputText @bind-Value="newBeneficiary.Email" type="email" placeholder="example@mail.com"
                                class="w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:border-amber-700 transition-colors" />
                            <ValidationMessage For="@(() => newBeneficiary.Email)" class="text-red-500 text-xs mt-1" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">เบอร์โทรศัพท์</label>
                            <InputText @bind-Value="newBeneficiary.PhoneNumber" type="tel" placeholder="08x-xxx-xxxx"
                                class="w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:border-amber-700 transition-colors" />
                            <ValidationMessage For="@(() => newBeneficiary.PhoneNumber)"
                                class="text-red-500 text-xs mt-1" />
                        </div>
                    </div>

                    <div class="p-4 bg-amber-50 rounded-2xl border border-amber-100">
                        <label class="block text-sm font-bold text-amber-900 mb-3">รูปแบบการตรวจสอบสถานะ</label>
                        <div class="space-y-2">
                            <label
                                class="flex items-center p-3 bg-white border @(newBeneficiary.Type == "Pulse" ? "border-amber-500 ring-1 ring-amber-500" : "border-slate-200") rounded-xl cursor-pointer hover:bg-amber-50 transition-all">
                                <input type="radio" name="verify_type" checked="@(newBeneficiary.Type == "Pulse")"
                                    @onchange="@(() => newBeneficiary.Type = "Pulse")"
                                    class="text-amber-600 focus:ring-amber-500 h-4 w-4">
                                <div class="ml-3">
                                    <span class="text-xs font-bold text-slate-800 block">แบบยืนยันตัวตน (Pulse Check)</span>
                                    <span class="text-[10px] text-slate-500">ระบบจะส่งข้อความหาผู้สืบทอดทุกๆ 6
                                        เดือนเพื่อเช็กข้อมูล</span>
                                </div>
                            </label>
                            <label
                                class="flex items-center p-3 bg-white border @(newBeneficiary.Type == "Silent" ? "border-amber-500 ring-1 ring-amber-500" : "border-slate-200") rounded-xl cursor-pointer hover:bg-slate-50 transition-all">
                                <input type="radio" name="verify_type" checked="@(newBeneficiary.Type == "Silent")"
                                    @onchange="@(() => newBeneficiary.Type = "Silent")"
                                    class="text-amber-600 focus:ring-amber-500 h-4 w-4">
                                <div class="ml-3">
                                    <span class="text-xs font-bold text-slate-800 block">แบบบันทึกรายชื่ออย่างเดียว</span>
                                    <span class="text-[10px] text-slate-500">ไม่มีการส่งข้อความรบกวน
                                        จะติดต่อไปเมื่อถึงเวลาส่งมรดกเท่านั้น</span>
                                </div>
                            </label>
                        </div>
                    </div>

                    <div class="pt-4">
                        <button type="submit" disabled="@isSaving"
                            class="w-full py-4 btn-amber text-white font-bold rounded-2xl shadow-lg active:scale-95 transition-transform disabled:opacity-70 disabled:cursor-not-allowed">
                            @if (isSaving)
                            {
                                <span>กำลังบันทึกข้อมูล...</span>
                            }
                            else
                            {
                                <span>บันทึกรายชื่อผู้สืบทอด</span>
                            }
                        </button>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
}

<style>
    .btn-amber {
        background-color: #d97706;
    }

    .btn-amber:hover {
        background-color: #b45309;
    }

    .flat-card {
        background: #ffffff;
        border: 1px solid #e2e8f0;
        transition: all 0.2s ease;
    }

    .flat-card:hover {
        border-color: #fcd34d;
    }

    .fade-in {
        animation: fadeIn 0.2s ease-out;
    }

    .scale-in {
        animation: scaleIn 0.2s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes scaleIn {
        from {
            transform: scale(0.95);
            opacity: 0;
        }

        to {
            transform: scale(1);
            opacity: 1;
        }
    }
</style>

@code {
    private bool showModal = false;
    private bool isSaving = false;
    private BeneficiaryModel newBeneficiary = new();

    private void OpenModal()
    {
        newBeneficiary = new() { Type = "Pulse" };
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private async Task HandleSave()
    {
        isSaving = true;
        // Simulate API call
        await Task.Delay(1000);
        isSaving = false;
        CloseModal();
    }

    public class BeneficiaryModel
    {
        [Required(ErrorMessage = "กรุณาระบุชื่อจริง")]
        public string FirstName { get; set; } = string.Empty;

        [Required(ErrorMessage = "กรุณาระบุนามสกุล")]
        public string LastName { get; set; } = string.Empty;

        public string Relationship { get; set; } = string.Empty;

        [Required(ErrorMessage = "กรุณาระบุอีเมล")]
        [EmailAddress(ErrorMessage = "รูปแบบอีเมลไม่ถูกต้อง")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "กรุณาระบุเบอร์โทรศัพท์")]
        public string PhoneNumber { get; set; } = string.Empty;

        public string Type { get; set; } = "Pulse";
    }
}