@page "/familyid/person/{PersonId}"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@using DigitalVault.Client.Shared.Layouts
@layout DashboardLayout

<PageTitle>สมชาย ใจดี - เอกสารครอบครัว</PageTitle>

<div class="space-y-6 page-transition">
    <!-- Breadcrumb -->
    <nav class="flex items-center gap-2 text-sm text-slate-500">
        <a href="/familyid" class="hover:text-blue-600">เอกสารครอบครัว</a>
        <i class="fas fa-chevron-right text-xs"></i>
        <span class="text-slate-800 font-medium">สมชาย ใจดี</span>
    </nav>

    <!-- Header -->
    <div class="flex items-center gap-4">
        <div
            class="@(_member?.AvatarColor ?? "bg-amber-500") w-16 h-16 rounded-full flex items-center justify-center text-white font-bold text-2xl">
            @(_member?.InitialsPlainText ?? "FM")
        </div>
        <div>
            <h1 class="text-3xl font-bold text-slate-800">
                @if (_member != null)
                {
                    @($"{_member.EncryptedFirstName} {_member.EncryptedLastName}")
                }
                else
                {
                    @("Loading...")
                }
            </h1>
            <p class="text-slate-500">สมาชิกในครอบครัว</p>
        </div>
    </div>

    <!-- Tabs -->
    <div class="border-b border-slate-200">
        <div class="flex gap-6">
            <button class="pb-3 border-b-2 border-blue-600 text-blue-600 font-medium">ภาพรวม</button>
            <button class="pb-3 border-b-2 border-transparent text-slate-500 hover:text-slate-700">ไฟล์</button>
            <button class="pb-3 border-b-2 border-transparent text-slate-500 hover:text-slate-700">บันทึก</button>
        </div>
    </div>

    <!-- Document Sections -->
    <div class="space-y-8">
        <!-- บัตรประชาชน (ID Card) -->
        <div>
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-bold text-slate-800">บัตรประชาชน</h2>
                <button class="text-sm text-blue-600 font-medium hover:underline">+ ข้อมูลเพิ่มเติม</button>
            </div>
            <div class="grid grid-cols-2 gap-4">
                @if (GetDocumentByType("IdCard_Front") is var manualIdFront && manualIdFront != null)
                {
                    <div class="border border-slate-200 rounded-xl p-4 bg-white relative group">
                        <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            <button @onclick="() => DeleteDocument(manualIdFront.Id)"
                                class="p-1 text-slate-400 hover:text-red-600">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                        <div class="flex flex-col items-center">
                            @if (_loadingImage == manualIdFront.Id)
                            {
                                <div class="w-16 h-16 flex items-center justify-center">
                                    <i class="fas fa-spinner fa-spin text-blue-500 text-2xl"></i>
                                </div>
                            }
                            else
                            {
                                <button @onclick="async () => await ViewImage(manualIdFront.Id)"
                                    class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                                    <i class="fas fa-eye mr-2"></i>View
                                </button>
                            }
                            <p class="text-xs text-slate-500 mt-2">ด้านหน้าบัตร</p>
                            <p class="text-xs text-slate-400">@manualIdFront.UploadedAt.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                }
                else
                {
                    <div
                        class="border-2 border-dashed border-slate-300 rounded-xl p-8 text-center hover:border-blue-400 hover:bg-blue-50/50 transition-all cursor-pointer relative flex flex-col items-center justify-center min-h-[160px]">

                        @if (_uploadingStates.TryGetValue("IdCard_Front", out var isUploading) && isUploading)
                        {
                            <div class="absolute inset-0 flex flex-col items-center justify-center bg-white/90 z-20 rounded-xl">
                                <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600 mb-2"></div>
                                <p class="text-sm text-blue-600 font-medium">กำลังอัปโหลด...</p>
                                <p class="text-xs text-slate-400">กำลังเข้ารหัสและส่งไฟล์</p>
                            </div>
                        }

                        <i class="fas fa-cloud-upload-alt text-3xl text-slate-400 mb-3 block"></i>
                        <p class="text-sm text-slate-600 mb-1">ลากไฟล์มาวางที่นี่ หรือ</p>
                        <p class="text-xs text-slate-500 mb-2">ด้านหน้าบัตร</p>

                        <InputFile OnChange="@(e => UploadFile(e, "IdCard_Front"))"
                            class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10" />

                        <span class="text-sm text-blue-600 font-medium hover:underline cursor-pointer">เลือกไฟล์</span>
                    </div>
                }
                @if (GetDocumentByType("IdCard_Back") is var manualIdBack && manualIdBack != null)
                {
                    <div class="border border-slate-200 rounded-xl p-4 bg-white relative group">
                        <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            <button @onclick="() => DeleteDocument(manualIdBack.Id)"
                                class="p-1 text-slate-400 hover:text-red-600">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                        <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            <button @onclick="() => DeleteDocument(manualIdBack.Id)"
                                class="p-1 text-slate-400 hover:text-red-600">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                        <div class="flex flex-col items-center">
                            @if (_loadingImage == manualIdBack.Id)
                            {
                                <div class="w-16 h-16 flex items-center justify-center">
                                    <i class="fas fa-spinner fa-spin text-blue-500 text-2xl"></i>
                                </div>
                            }
                            else
                            {
                                <button @onclick="async () => await ViewImage(manualIdBack.Id)"
                                    class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                                    <i class="fas fa-eye mr-2"></i>View
                                </button>
                            }
                            <p class="text-xs text-slate-500 mt-2">ด้านหลังบัตร</p>
                            <p class="text-xs text-slate-400">@manualIdBack.UploadedAt.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                }
                else
                {
                    <div
                        class="border-2 border-dashed border-slate-300 rounded-xl p-8 text-center hover:border-blue-400 hover:bg-blue-50/50 transition-all cursor-pointer relative flex flex-col items-center justify-center min-h-[160px]">

                        @if (_uploadingStates.TryGetValue("IdCard_Back", out var isUploading) && isUploading)
                        {
                            <div class="absolute inset-0 flex flex-col items-center justify-center bg-white/90 z-20 rounded-xl">
                                <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600 mb-2"></div>
                                <p class="text-sm text-blue-600 font-medium">กำลังอัปโหลด...</p>
                            </div>
                        }

                        <i class="fas fa-cloud-upload-alt text-3xl text-slate-400 mb-3 block"></i>
                        <p class="text-sm text-slate-600 mb-1">ลากไฟล์มาวางที่นี่ หรือ</p>
                        <p class="text-xs text-slate-500 mb-2">ด้านหลังบัตร</p>

                        <InputFile OnChange="@(e => UploadFile(e, "IdCard_Back"))"
                            class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10" />

                        <span class="text-sm text-blue-600 font-medium hover:underline cursor-pointer">เลือกไฟล์</span>
                    </div>
                }
            </div>
            <div class="mt-3">
                <button @onclick="ToggleIdCardInfo"
                    class="text-sm text-blue-600 hover:underline flex items-center gap-1">
                    <i class="fas @(_showIdCardInfo ? "fa-chevron-down" : "fa-chevron-right") text-xs"></i>
                    <span>ข้อมูลบัตร</span>
                </button>
                @if (_showIdCardInfo)
                {
                    <div class="mt-4 bg-slate-50 rounded-xl p-4 space-y-3 animate-fadeIn">
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">เลขประจำตัวประชาชน (13
                                หลัก)</label>
                            <input type="text" placeholder="กรอกเลขบัตรประชาชน" maxlength="13"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">วันออกบัตร</label>
                            <input type="date"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">วันหมดอายุ</label>
                            <input type="date"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <button
                            class="mt-2 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors">
                            บันทึก
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- ใบขับขี่ (Driver License) -->
        <div>
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-bold text-slate-800">ใบขับขี่</h2>
                <button class="text-sm text-blue-600 font-medium hover:underline">+ ข้อมูลเพิ่มเติม</button>
            </div>
            <div class="grid grid-cols-2 gap-4">
                @if (GetDocumentByType("DriverLicense_Front") is var dlFront && dlFront != null)
                {
                    <div class="border border-slate-200 rounded-xl p-4 bg-white relative group">
                        <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            <button @onclick="() => DeleteDocument(dlFront.Id)"
                                class="p-1 text-slate-400 hover:text-red-600">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                        <div class="flex flex-col items-center">
                            @if (_loadingImage == dlFront.Id)
                            {
                                <div class="w-16 h-16 flex items-center justify-center">
                                    <i class="fas fa-spinner fa-spin text-blue-500 text-2xl"></i>
                                </div>
                            }
                            else
                            {
                                <button @onclick="async () => await ViewImage(dlFront.Id)"
                                    class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                                    <i class="fas fa-eye mr-2"></i>View
                                </button>
                            }
                            <p class="text-xs text-slate-500 mt-2">ด้านหน้าบัตร</p>
                            <p class="text-xs text-slate-400">@dlFront.UploadedAt.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                }
                else
                {
                    <div
                        class="border-2 border-dashed border-slate-300 rounded-xl p-8 text-center hover:border-blue-400 hover:bg-blue-50/50 transition-all cursor-pointer relative">
                        <i class="fas fa-cloud-upload-alt text-3xl text-slate-400 mb-3 block"></i>
                        <p class="text-sm text-slate-600 mb-1">ลากไฟล์มาวางที่นี่ หรือ</p>
                        <p class="text-xs text-slate-500 mb-2">ด้านหน้าบัตร</p>
                        <InputFile OnChange="@(e => UploadFile(e, "DriverLicense_Front"))"
                            class="absolute inset-0 w-full h-full opacity-0 cursor-pointer" />
                        <span class="text-sm text-blue-600 font-medium hover:underline cursor-pointer">เลือกไฟล์</span>
                    </div>
                }
                @if (GetDocumentByType("DriverLicense_Back") is var dlBack && dlBack != null)
                {
                    <div class="border border-slate-200 rounded-xl p-4 bg-white relative group">
                        <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            <button @onclick="() => DeleteDocument(dlBack.Id)"
                                class="p-1 text-slate-400 hover:text-red-600">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                        <div class="flex flex-col items-center">
                            @if (_loadingImage == dlBack.Id)
                            {
                                <div class="w-16 h-16 flex items-center justify-center">
                                    <i class="fas fa-spinner fa-spin text-blue-500 text-2xl"></i>
                                </div>
                            }
                            else
                            {
                                <button @onclick="async () => await ViewImage(dlBack.Id)"
                                    class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                                    <i class="fas fa-eye mr-2"></i>View
                                </button>
                            }
                            <p class="text-xs text-slate-500 mt-2">ด้านหลังบัตร</p>
                            <p class="text-xs text-slate-400">@dlBack.UploadedAt.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                }
                else
                {
                    <div
                        class="border-2 border-dashed border-slate-300 rounded-xl p-8 text-center hover:border-blue-400 hover:bg-blue-50/50 transition-all cursor-pointer relative">
                        <i class="fas fa-cloud-upload-alt text-3xl text-slate-400 mb-3 block"></i>
                        <p class="text-sm text-slate-600 mb-1">ลากไฟล์มาวางที่นี่ หรือ</p>
                        <p class="text-xs text-slate-500 mb-2">ด้านหลังบัตร</p>
                        <InputFile OnChange="@(e => UploadFile(e, "DriverLicense_Back"))"
                            class="absolute inset-0 w-full h-full opacity-0 cursor-pointer" />
                        <span class="text-sm text-blue-600 font-medium hover:underline cursor-pointer">เลือกไฟล์</span>
                    </div>
                }
            </div>
            <div class="mt-3">
                <button @onclick="ToggleDriverLicenseInfo"
                    class="text-sm text-blue-600 hover:underline flex items-center gap-1">
                    <i class="fas @(_showDriverLicenseInfo ? "fa-chevron-down" : "fa-chevron-right") text-xs"></i>
                    <span>ข้อมูลบัตร</span>
                </button>
                @if (_showDriverLicenseInfo)
                {
                    <div class="mt-4 bg-slate-50 rounded-xl p-4 space-y-3 animate-fadeIn">
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">เลขที่ใบขับขี่</label>
                            <input type="text" placeholder="กรอกเลขที่ใบขับขี่"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">ประเภทใบขับขี่</label>
                            <select
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                                <option>เลือกประเภท</option>
                                <option>รถจักรยานยนต์ (ชั่วคราว)</option>
                                <option>รถจักรยานยนต์</option>
                                <option>รถยนต์ส่วนบุคคล (ชั่วคราว)</option>
                                <option>รถยนต์ส่วนบุคคล</option>
                                <option>รถยนต์สาธารณะ</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">วันออกบัตร</label>
                            <input type="date"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">วันหมดอายุ</label>
                            <input type="date"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <button
                            class="mt-2 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors">
                            บันทึก
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- พาสปอร์ต (Passport) -->
        <div>
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-bold text-slate-800">หนังสือเดินทาง (พาสปอร์ต)</h2>
                <button class="text-sm text-blue-600 font-medium hover:underline">+ ข้อมูลเพิ่มเติม</button>
            </div>
            <div class="grid grid-cols-2 gap-4">
                @if (GetDocumentByType("Passport_Personal") is var ppPersonal && ppPersonal != null)
                {
                    <div class="border border-slate-200 rounded-xl p-4 bg-white relative group">
                        <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            <button @onclick="() => DeleteDocument(ppPersonal.Id)"
                                class="p-1 text-slate-400 hover:text-red-600">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                        <div class="flex flex-col items-center cursor-pointer" @onclick="() => OpenDocument(ppPersonal.Id)">
                            <div
                                class="w-12 h-12 rounded-lg bg-green-50 flex items-center justify-center text-green-600 mb-2">
                                <i class="fas fa-check-circle text-2xl"></i>
                            </div>
                            <p class="text-xs text-slate-500">หน้าข้อมูลส่วนตัว</p>
                            <p class="text-xs text-slate-400">@ppPersonal.UploadedAt.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                }
                else
                {
                    <div
                        class="border-2 border-dashed border-slate-300 rounded-xl p-8 text-center hover:border-blue-400 hover:bg-blue-50/50 transition-all cursor-pointer relative">
                        <i class="fas fa-cloud-upload-alt text-3xl text-slate-400 mb-3 block"></i>
                        <p class="text-sm text-slate-600 mb-1">ลากไฟล์มาวางที่นี่ หรือ</p>
                        <p class="text-xs text-slate-500 mb-2">หน้าข้อมูลส่วนตัว</p>
                        <InputFile OnChange="@(e => UploadFile(e, "Passport_Personal"))"
                            class="absolute inset-0 w-full h-full opacity-0 cursor-pointer" />
                        <span class="text-sm text-blue-600 font-medium hover:underline cursor-pointer">เลือกไฟล์</span>
                    </div>
                }
                @if (GetDocumentByType("Passport_Visa") is var ppVisa && ppVisa != null)
                {
                    <div class="border border-slate-200 rounded-xl p-4 bg-white relative group">
                        <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            <button @onclick="() => DeleteDocument(ppVisa.Id)"
                                class="p-1 text-slate-400 hover:text-red-600">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                        <div class="flex flex-col items-center cursor-pointer" @onclick="() => OpenDocument(ppVisa.Id)">
                            <div
                                class="w-12 h-12 rounded-lg bg-green-50 flex items-center justify-center text-green-600 mb-2">
                                <i class="fas fa-check-circle text-2xl"></i>
                            </div>
                            <p class="text-xs text-slate-500">หน้าวีซ่า (ถ้ามี)</p>
                            <p class="text-xs text-slate-400">@ppVisa.UploadedAt.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                }
                else
                {
                    <div
                        class="border-2 border-dashed border-slate-300 rounded-xl p-8 text-center hover:border-blue-400 hover:bg-blue-50/50 transition-all cursor-pointer relative">
                        <i class="fas fa-cloud-upload-alt text-3xl text-slate-400 mb-3 block"></i>
                        <p class="text-sm text-slate-600 mb-1">ลากไฟล์มาวางที่นี่ หรือ</p>
                        <p class="text-xs text-slate-500 mb-2">หน้าวีซ่า (ถ้ามี)</p>
                        <InputFile OnChange="@(e => UploadFile(e, "Passport_Visa"))"
                            class="absolute inset-0 w-full h-full opacity-0 cursor-pointer" />
                        <span class="text-sm text-blue-600 font-medium hover:underline cursor-pointer">เลือกไฟล์</span>
                    </div>
                }
            </div>
            <div class="mt-3">
                <button @onclick="TogglePassportInfo"
                    class="text-sm text-blue-600 hover:underline flex items-center gap-1">
                    <i class="fas @(_showPassportInfo ? "fa-chevron-down" : "fa-chevron-right") text-xs"></i>
                    <span>ข้อมูลหนังสือเดินทาง</span>
                </button>
                @if (_showPassportInfo)
                {
                    <div class="mt-4 bg-slate-50 rounded-xl p-4 space-y-3 animate-fadeIn">
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">เลขที่หนังสือเดินทาง</label>
                            <input type="text" placeholder="กรอกเลขพาสปอร์ต"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">ประเทศที่ออก</label>
                            <input type="text" value="ประเทศไทย"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">วันออกเล่ม</label>
                            <input type="date"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">วันหมดอายุ</label>
                            <input type="date"
                                class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg focus:outline-none focus:border-blue-600 text-sm">
                        </div>
                        <button
                            class="mt-2 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors">
                            บันทึก
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- ทะเบียนบ้าน (House Registration) -->
        <div>
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-bold text-slate-800">ทะเบียนบ้าน</h2>
