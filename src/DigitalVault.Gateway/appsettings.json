{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Debug",
      "Yarp.ReverseProxy": "Debug"
    }
  },
  "AllowedHosts": "*",
  "AWS": {
    "Profile": "default",
    "Region": "us-east-1",
    "ServiceURL": "http://localhost:9000",
    "ForcePathStyle": "true",
    "AccessKey": "minioadmin",
    "SecretKey": "minioadmin",
    "BucketName": "digital-vault-documents-local"
  },
  "ApiBaseUrl": "http://localhost:5135",
  "JwtSettings": {
    "SecretKey": "CHANGE_THIS_TO_A_SECURE_SECRET_KEY_IN_PRODUCTION",
    "Issuer": "DigitalVault",
    "Audience": "DigitalVault.Client",
    "ExpirationMinutes": 60
  },
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "api-cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ],
        "AuthorizationPolicy": "Authenticated",
        "Order": 1
      },
      "blazor-route": {
        "ClusterId": "blazor-cluster",
        "Match": {
          "Path": "/{**catch-all}"
        },
        "AuthorizationPolicy": "Authenticated",
        "Order": 100
      }
    },
    "Clusters": {
      "api-cluster": {
        "Destinations": {
          "api-destination": {
            "Address": "http://localhost:5135"
          }
        }
      },
      "blazor-cluster": {
        "Destinations": {
          "blazor-destination": {
            "Address": "http://localhost:5067"
          }
        }
      }
    }
  }
}