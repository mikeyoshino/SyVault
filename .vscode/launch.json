{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üöÄ API Server",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api",
            "program": "${workspaceFolder}/src/DigitalVault.API/bin/Debug/net8.0/DigitalVault.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/DigitalVault.API",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5135"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "üåê Gateway Server (Web) ‚ö†Ô∏è Needs Client Running",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-gateway",
            "program": "${workspaceFolder}/src/DigitalVault.Gateway/bin/Debug/net8.0/DigitalVault.Gateway.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/DigitalVault.Gateway",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5001"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "üé® Client Standalone (Dev Server)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-client",
            "program": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/src/DigitalVault.Client/DigitalVault.Client.csproj"
            ],
            "cwd": "${workspaceFolder}/src/DigitalVault.Client",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "console": "integratedTerminal",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5067"
            }
        },
        {
            "name": "üé® Blazor WASM Debug (via Gateway)",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/DigitalVault.Client",
            "browser": "chrome",
            "url": "http://localhost:5001",
            "timeout": 120000,
            "webRoot": "${workspaceFolder}/src/DigitalVault.Client",
            "inspectUri": "{wsProtocol}://{url.hostname}:{url.port}/_framework/debug/ws-proxy?browser={browserInspectUri}",
            "trace": true,
            "hosted": true
        },
        {
            "name": "üîó Attach to Client",
            "type": "blazorwasm",
            "request": "attach",
            "cwd": "${workspaceFolder}/src/DigitalVault.Client"
        },
        {
            "name": "üè† Landing Page",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-landing",
            "program": "${workspaceFolder}/src/DigitalVault.LandingPage/bin/Debug/net8.0/DigitalVault.LandingPage.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/DigitalVault.LandingPage",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5082"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ],
    "compounds": [
        {
            "name": "‚ö° Full Stack (Servers Only)",
            "configurations": [
                "üöÄ API Server",
                "üåê Gateway Server (Web) ‚ö†Ô∏è Needs Client Running",
                "üé® Client Standalone (Dev Server)"
            ],
            "stopAll": true,
            "preLaunchTask": "cleanup-and-build-all",
            "presentation": {
                "hidden": false,
                "group": "fullstack",
                "order": 1
            },
            "postDebugTask": "kill-all-servers"
        },
        {
            "name": "üîç Full Stack + Blazor Debug",
            "configurations": [
                "üöÄ API Server",
                "üåê Gateway Server (Web) ‚ö†Ô∏è Needs Client Running",
                "üé® Client Standalone (Dev Server)",
                "üé® Blazor WASM Debug (via Gateway)"
            ],
            "stopAll": true,
            "preLaunchTask": "cleanup-and-build-all",
            "presentation": {
                "hidden": false,
                "group": "fullstack",
                "order": 2
            },
            "postDebugTask": "kill-all-servers"
        },
        {
            "name": "üîß Gateway + Client (No API Debug)",
            "configurations": [
                "üåê Gateway Server (Web) ‚ö†Ô∏è Needs Client Running",
                "üé® Client Standalone (Dev Server)"
            ],
            "stopAll": true,
            "preLaunchTask": "cleanup-and-build-all",
            "presentation": {
                "hidden": false,
                "group": "frontend",
                "order": 3
            },
            "postDebugTask": "kill-all-servers"
        },
        {
            "name": "üîß API Only (Standalone)",
            "configurations": [
                "üöÄ API Server"
            ],
            "stopAll": true,
            "preLaunchTask": "build-api",
            "presentation": {
                "hidden": false,
                "group": "backend",
                "order": 4
            }
        }
    ]
}